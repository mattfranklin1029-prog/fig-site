{
  "name": "fig-contact-graph-app",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "tw:build": "tailwindcss -i ./src/tailwind.css -o ./public/tw.css --minify",
    "tw:watch": "tailwindcss -i ./src/tailwind.css -o ./public/tw.css --watch",
    "dev": "nodemon server.js",
    "start": "node server.js",
    "dev:all": "concurrently -n CSS,API -c magenta,cyan \"npm:tw:watch\" \"npm:dev\"",      
    "prestart": "npm run tw:build"
  },
  "engines": {
    "node": ">=18 <23"
  },
  "dependencies": {
    "@azure/identity": "^3.4.1",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "compression": "^1.7.4",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "isomorphic-fetch": "^3.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  }
}
